package com.techpalle;

import java.util.Scanner;

public class Revnum
{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Value =");
		int x = sc.nextInt();
		int rev = 0;
		while(x != 0)
		{
			int rem = x % 10;
			rev = rev * 10 + rem;
			x = x / 10;
		}
		System.out.println("The Total Value = "+rev);
		sc.close();
	}
}
